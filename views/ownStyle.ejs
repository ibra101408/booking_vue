<div class="container ownStyle_container">
    <h4 class="transitional transitional_ownStyle"><%= translations.choose%></h4>
    <h1 class="heading"><%= translations.own_style%></h1>
    <div class="divider"></div>
    <p class="text text_ownStyle">
        <%= translations.own_style_text%>
    </p>

    <div class="glide_container">
        <div class="glide" id="glide1">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    <li class="glide__slide"><img src="./assets/1_1.jpg" alt="Slide 1"></li>
                    <li class="glide__slide"><img src="./assets/1_2.jpg" alt="Slide 2"></li>
                </ul>
            </div>
        </div>


        <div class="glide" id="glide2">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    <li class="glide__slide"><img src="./assets/2_1.jpg" alt="Slide 1"></li>
                    <li class="glide__slide"><img src="./assets/1_2.jpg" alt="Slide 2"></li>
                </ul>
            </div>
        </div>

        <div class="glide" id="glide3">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    <li class="glide__slide"><img src="./assets/3_1.jpg" alt="Slide 1"></li>
                    <li class="glide__slide"><img src="./assets/3_2.jpg" alt="Slide 2"></li>
                </ul>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script>

        function initializeGlide(selector, autoplayDuration) {
            new Glide(selector, {
                type: 'carousel',
                startAt: 0,
                animationDuration: 1000,
                perView: 1,
                autoplay: autoplayDuration,
            }).mount();
        }

        initializeGlide('#glide1', 3000);
        initializeGlide('#glide2', 4000);
        initializeGlide('#glide3', 3500);
    </script>

</div>

