<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"/>

<div class="container">
    <img class="model" src="/assets/hero_model2.png" alt="model"/>

    <div class="welcome_text_button">
        <h1 class="slogan"><%= translations.slogan %></h1>
        <button class="booking_link"><%= translations.bookingLink %></button>
    </div>

    <img class="bg_img" src="/assets/bg/homepage_bg.jpg" alt="bg"/>
    <img class="under_bg_img" src="/assets/bg/over-curve_03.png" alt="under_bg"/>
    <img class="img5" src="/assets/service4.png" alt="something"/>
    <br/>

    <div class="textContainer">
        <h4 class="transitional"><%= translations.welcome %></h4>

        <h1 class="heading"><%= translations.explorer_hair %></h1>
        <h1 class="heading"><%= translations.studio %></h1>
        <div class="divider"></div>

        <img class="img6" src="/assets/jelena.png" alt="jelena"/>
        <em class="transitional transitional_worker"><%= translations.stylist %></em>
        <div class="divider2"></div>
        <h2 class="worker-name"><%= translations.elenaPahnapuu %></h2>
        <img class="img7" src="/assets/bg/intro-bg2.jpg" alt="intro_bg2"/>
    </div>

</div>
<!--services-->
<div class="container service_container">
    <h4 class="transitional transitional_services"><%= translations.our %></h4>
    <h1 class="heading"><%= translations.services %></h1>
    <div class="divider"></div>
    <p class="text text_service">
        <%= translations.saloon_text_services %>
    </p>
    <div class="service_grid_container">
        <% about_services.forEach(service => {
         %>
        <div class="services_box">
            <img class="image" src="<%=  service.img_path  %>" alt="<%=  service.name_et  %> Image"/>
            <h3 class="service_name"><%=  local === 'ru' ? service.name_ru : service.name_et  %></h3>
            <p class="text service_text"><%=  local === 'ru' ? service.description_ru : service.description_et  %></p>
        </div>
        <%  }); %>
    </div>
</div>

<!--own style-->
<div class="container ownStyle_container">
    <h4 class="transitional transitional_ownStyle"><%= translations.choose %></h4>
    <h1 class="heading"><%= translations.own_style %></h1>
    <div class="divider"></div>
    <p class="text text_ownStyle">
        <%= translations.own_style_text %>
    </p>

    <div class="glide_container">
        <div class="glide" id="glide1">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    <li class="glide__slide"><img src="/assets/1_1.jpg" alt="Slide 1"></li>
                    <li class="glide__slide"><img src="/assets/1_2.jpg" alt="Slide 2"></li>
                </ul>
            </div>
        </div>


        <div class="glide" id="glide2">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    <li class="glide__slide"><img src="/assets/2_1.jpg" alt="Slide 1"></li>
                    <li class="glide__slide"><img src="/assets/2_2.jpg" alt="Slide 2"></li>
                </ul>
            </div>
        </div>

        <div class="glide" id="glide3">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    <li class="glide__slide"><img src="/assets/3_1.jpg" alt="Slide 1"></li>
                    <li class="glide__slide"><img src="/assets/3_2.jpg" alt="Slide 2"></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!--pricelist  -->

<div class="container prices_container">
    <h4 class="transitional transitional_prices"><%= translations.our %></h4>
    <h1 class="heading"><%= translations.prices %></h1>
    <div class="divider"></div>
    <p class="text price_text">
        <%= translations.creativity_text %>
    </p>

    <div class="price_list">
        <div class="price_grid_container men-child">
            <div class="price_card_container">
                <h1 class="price_card_name"><%= translations.men %></h1>
                <div class="price_card men">
                    <ul>
                        <% services
                                .filter(service => service.category_id === 1)
                                .forEach(service => { %>
                            <li>
                                <span class="service_name service_name_pricelist"><%= service.name %></span>
                                <span class="price <%= service.is_price_range ? 'is_price_range' : '' %>">
                                    <% if (service.is_price_range) { %>
                                        <span class="note"><%= translations.is_price_range %></span>
                                    <% } %>
                                    <%= service.price %>€
                                    <%= service.is_additional_material ? translations.additional_material : '' %>

                                </span>

                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <div class="price_card_container">
                <h1 class="price_card_name"><%= translations.child %></h1>
                <div class="price_card child">
                    <ul>
                        <% services
                                .filter(service => service.category_id === 3)
                                .forEach(service => { %>
                            <li>
                                <span class="service_name service_name_pricelist"><%= service.name %></span>
                                <span class="price <%= service.is_price_range ? 'is_price_range' : '' %>">
                                    <% if (service.is_price_range) { %>
                                        <span class="note"><%= translations.is_price_range %></span>
                                    <% } %>
                                    <%= service.price %>€
                                    <%= service.is_additional_material ? translations.additional_material : '' %>
                                </span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>

        <div class="price_grid_container women">
            <div class="price_card_container">
                <h1 class="price_card_name"><%= translations.women %></h1>

                <div class="price_card women">
                    <ul>
                        <% services
                                .filter(service => service.category_id === 2)
                                .forEach(service => { %>
                            <li>
                                <span class="service_name service_name_pricelist"><%= service.name %></span>
                                <span class="price <%= service.is_price_range ? 'is_price_range' : '' %>">
                                    <% if (service.is_price_range) { %>
                                        <span class="note"><%= translations.is_price_range %></span>
                                    <% } %>
                                    <%= service.price %>€
                                    <%= service.is_additional_material ? translations.additional_material : '' %>
                                </span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>

        <div class="price_grid_container material">
            <div class="price_card_container">
                <h1 class="price_card_name"><%= translations.material %></h1>
                <div class="price_card material">
                    <ul>
                        <% services
                                .filter(service => service.category_id === 4)
                                .forEach(service => { %>
                            <li>
                                <span class="service_name service_name_pricelist"><%= service.name %></span>
                                <span class="price"><%= service.price %>€ <%= service.additionalCost || '' %></span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script>

    function initializeGlide(selector, autoplayDuration) {
        new Glide(selector, {
            type: 'carousel',
            startAt: 0,
            animationDuration: 1000,
            perView: 1,
            autoplay: autoplayDuration,
        }).mount();
    }

    initializeGlide('#glide1', 3000);
    initializeGlide('#glide2', 4000);
    initializeGlide('#glide3', 3500);
</script>



